<% if user_signed_in? && !(current_user.id == post.user_id) %>
  <div class="post-show-content-head__info-bookmark-logo" id="post-bookmark-<%= post.id %>">
    <% if post.is_bookmarked_by?(current_user) %> 
      <%= render 'bookmarks/bookmarked', post: post %>
    <% else %>
      <%= render 'bookmarks/non_bookmarked', post: post %>
    <% end %>
  </div>
<% end %>