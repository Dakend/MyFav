<div id="notification">
  <div id="notification__txt"></div>
</div>
<script>
  var notice = (msg) => {
    let notification = document.getElementById('notification');
    let notificationContent = document.getElementById('notification__txt');
    notificationContent.innerHTML = msg;
    notification.style.visibility = 'visible';
    setTimeout(() => {
            notificationContent.innerHTML = '';
            notification.style.visibility = 'hidden';
    }, 4000);
  };
  <% if flash.any? %>
    notice("<%= flash[:notice]%>");
  <% end %>
</script>