<div class="post-card">
  <%= link_to post_path(post) do %>
    <div class="post-card__flame">
      <div class="card-img">
        <% post.movies.each do |movie| %>
          <%= image_tag movie.image, class: "card-img__cont"%>
        <% end %>
      </div>
    </div>
    <div class="post-card__info">
      <div class="info-header">
        <%= image_tag post.user.icon, class: "info-header__icon" %>
        <div class="info-header__ttl"><%= post.title %></div>
      </div>
      <div class="info-detail">
        <div class="section-1">
          <div class="section-1__favorite-logo"><i class="fas fa-heart"></i></div>
          <div class="section-1__favorite-number"><%= post.favorites.count %></div>
          <div class="section-1__username"><%= post.user.name %></div>
        </div>
        <div class="section-2">
          <div class="section-2__date"><%= post.created_at.strftime('%Y/%m/%d') %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>